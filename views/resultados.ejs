<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>

    <body>

        <%- include('./partials/nav') %>
            <h1>Buscador</h1>
            <div class="container">
                <div class="row">
                    <form class="d-flex" id="form">
                        <input class="form-control me-2" id="query" type="search" placeholder="IngresÃ¡ un material..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
            <div class="container">
                <h3>Resultados:</h3>
            </div>
            <div class="container" id="resultados">
                <% if (resultados) { %>
                    <% resultados.forEach(function(material) { %>

                        <div class="row justify-content-start">
                            <div class="col-4">
                                <a href="id/<%=material._id %>">
                                    <%=material.MATERIAL %>
                                </a>
                                <p>
                                    <%= material.MACRO_CATEGORIA %>
                                </p>
                            </div>
                            <div class="col-4 align-middle">
                                <p>
                                    <%= material.CATEGORIA1 %>
                                </p>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="row justify-content-start">
                                    <div class="col-4">
                                        <p>No se encontraron materiales similares</p>
                                    </div>
                                </div>
                                <% } %>
            </div>


            <script src="./indexDetails.js"></script>
    </body>

</html>