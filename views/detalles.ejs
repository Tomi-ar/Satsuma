<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>

    <body>

        <%- include('./partials/nav') %>
            <h1>Buscador</h1>
            <div class="container">
                <div class="row">
                    <form class="d-flex" id="form">
                        <input class="form-control me-2" id="query" type="search" placeholder="IngresÃ¡ un material..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                </div>
            </div>
            <div class="container">
                <h3>Detalles del material:</h3>
            </div>
            <div class="container" id="resultados">
                <% if (resultado) { %>
                    <div class="row justify-content-start">
                        <div class="col-12">
                            <h5>
                                <%= resultado.MATERIAL %>
                            </h5>
                            <p>
                                <%= resultado.CATEGORIA1 %>
                            </p>
                            <ul>
                                <li>
                                    <%= resultado.macroCat.COMENTARIOS[0] %>
                                </li>
                            </ul>
                        </div>
                        <div class="col-12">
                            <h5>
                                <%= resultado.MACRO_CATEGORIA %>
                            </h5>
                            <% if (comms) { %>
                                <% comms.forEach(function(com) { %>
                                    <ul>
                                        <li>
                                            <%= com %>
                                        </li>
                                    </ul>
                                    <% }) %>
                                        <% } %>
                        </div>
                    </div>
                    <% } %>

            </div>


    </body>

</html>